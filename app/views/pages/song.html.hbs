<!DOCTYPE html>
<html>
<head>
  <title>{{track}}</title>


  <!-- There's JS code to handle what the href of this element becomes. -->
  <link id="themeCssElement" rel="stylesheet" type="text/css" href="">

  {{#css "css/styles-song"}}{{/css}}
  {{#css "css/theme-base.css"}}{{/css}}
</head>


<body>
  <h1 class="center-text">{{artist}} - {{track}}</h1>


  <div id="song" class="song" style="display: none;"></div>


  <div class="sidebar">
    <h3>Toolbox</h3>

    <label for="fontSize">Font size: <input type="text" id="fontSize"></label>
    <br />
    <label for="viewSelector">View Mode: <select id="viewSelector">
      <option value="0">Lyrics and Chords</option>
      <option value="1">Just Lyrics</option>
    </select></label>
    <br />
    <label for="themeSelector">Select Theme: <select id="themeSelector"></select></label>
    <br />
    <label for="transposeSelector">Transpose: <select id="transposeSelector">
      <option value="6">+6</option>
      <option value="5">+5</option>
      <option value="4">+4</option>
      <option value="3">+3</option>
      <option value="2">+2</option>
      <option value="1">+1</option>
      <option value="0" selected="true">0</option>
      <option value="-1">-1</option>
      <option value="-2">-2</option>
      <option value="-3">-3</option>
      <option value="-4">-4</option>
      <option value="-5">-5</option>
      <option value="-6">-6</option>
    </select></label>
    <br />
    <button type="button" id="printButton">Print!</button>
    <button type="button" id="editButton">Edit This Song</button>
  </div>
</body>

<script type="text/javascript">
  window.THEMES = [
    {
      name: 'Default',
      url: '{{#assetPath "css/theme-default"}}{{/assetPath}}'
    },
    {
      name: 'Colourful',
      url: '{{#assetPath "css/theme-colorful"}}{{/assetPath}}'
    }
  ];
  window.SOURCE = '{{{source}}}';
</script>

{{#js "build/js/song"}}{{/js}}

</html>
